{
  "name": "ardugui",
  "version": "0.1.0",
  "description": "INAV Configurator-style GUI for ArduPilot",
  "author": {
    "name": "ArduGUI Contributors",
    "email": "ardugui@users.noreply.github.com"
  },
  "license": "GPL-3.0",
  "homepage": "https://github.com/agoliveira/ardugui",
  "repository": {
    "type": "git",
    "url": "https://github.com/agoliveira/ardugui.git"
  },
  "bugs": {
    "url": "https://github.com/agoliveira/ardugui/issues"
  },
  "keywords": [
    "ardupilot",
    "ground-control-station",
    "drone",
    "multirotor",
    "flight-controller",
    "mavlink",
    "electron",
    "configurator"
  ],
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ electron/",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\"",
    "generate:mavlink": "npx ts-node scripts/generate-mavlink.ts",
    "import:params": "npx ts-node scripts/import-param-metadata.ts",
    "preview": "vite preview"
  },
  "dependencies": {
    "lucide-react": "^0.575.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "serialport": "^13.0.0",
    "three": "^0.183.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.183.1",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^10.0.1",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.ardugui.app",
    "productName": "ArduGUI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
